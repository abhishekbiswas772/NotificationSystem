# ===========================================
# Notification System - Development Environment
# ===========================================

# DATABASE CONFIGURATION
DATABASE_URL=postgres://postgres:root@localhost:5432/notification_db

# REDIS CONFIGURATION
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# SERVER CONFIGURATION
PORT=8080
GIN_MODE=debug
WORKER_COUNT=5

# SENDGRID CONFIGURATION (Replace with your actual API key)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@localhost.com
SENDGRID_FROM_NAME=Notification System

# TWILIO CONFIGURATION (Replace with your actual credentials)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# FIREBASE CLOUD MESSAGING
FCM_SERVER_KEY=
FCM_PROJECT_ID=

# AUTHENTICATION & SECURITY
JWT_SECRET=dev-secret-key-change-in-production-12345678
JWT_EXPIRATION_HOURS=24
API_KEY_SECRET=dev-api-key-secret-change-in-production

# RATE LIMITING
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_DAY=10000

# RETRY CONFIGURATION
MAX_RETRY_ATTEMPTS=5
RETRY_BASE_DELAY=60
RETRY_MAX_DELAY=3600

# DLQ CONFIGURATION
DLQ_RETENTION_DAYS=30

# SCHEDULER CONFIGURATION
SCHEDULER_ENABLED=true
SCHEDULER_RETRY_CRON=@every 1m
SCHEDULER_DLQ_CLEANUP_CRON=@daily

# LOGGING CONFIGURATION
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_REQUESTS=true

# MONITORING
METRICS_ENABLED=true
METRICS_PORT=9090
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# WEBHOOK CONFIGURATION
WEBHOOK_TIMEOUT=10
WEBHOOK_MAX_RETRIES=3

# NOTIFICATION DEFAULTS
DEFAULT_EMAIL_ENABLED=true
DEFAULT_SMS_ENABLED=true
DEFAULT_PUSH_ENABLED=true
DEFAULT_FREQUENCY_CAP=100

# CORS CONFIGURATION
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# DEVELOPMENT SETTINGS
HOT_RELOAD=true
USE_MOCK_PROVIDERS=true